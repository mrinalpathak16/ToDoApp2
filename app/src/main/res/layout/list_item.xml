<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="68dp"
        android:layout_height="88dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/normal"
                android:layout_gravity="center"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/completed_button"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:text="TASK DONE"
            android:textSize="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            app:iconPadding="4dp"
            app:icon="@drawable/ic_action_name"
            app:iconSize="20dp"
            app:iconGravity="start"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="32dp"
        android:text="23:59"
        android:textColor="#000"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:id="@+id/time"/>
    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/ll"
        android:layout_toStartOf="@id/time"
        android:maxLines="1"
        android:textSize="30sp"
        android:autoSizeMaxTextSize="36dp"
        android:textColor="#000"
        android:text="Label 1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/time"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="15dp"
        android:paddingStart="4dp"
        android:paddingEnd="6dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/date"
        android:text="27/11/2019"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:layout_toStartOf="@id/date"
        android:layout_toEndOf="@id/ll"
        android:layout_below="@id/label"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="6dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:autoSizeMaxTextSize="16dp"
        android:id="@+id/desc"
        android:text="I contain the description of the task to be done"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/boundary"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>